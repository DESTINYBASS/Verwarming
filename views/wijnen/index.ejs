<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Wijnen</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/all.min.js" integrity="sha512-YSdqvJoZr83hj76AIVdOcvLWYMWzy6sJyIMic2aQz5kh2bPTd9dzY3NtdeEAzPp/PhgZqr4aJObB3ym/vsItMg==" crossorigin="anonymous"></script>
        <link rel="icon" href="icon.ico">
    </head>
    <body onload="checkList()">
        <div class="container mt-3">
            <h1 class="mb-4"> Wijnen</h1>
            <a href="/wijnen/new" class="btn btn-success">Nieuwe wijn</a> 
            <select name="filter" class="filter" onchange="filter()">
                <option value="all">Alle</option>
                <option value="laat">Te laat</option>
                <option value="drinken">Drinken</option>
                <option value="rijpen">Rijpen</option>
            </select>
            <br><br><input type="text" id="myInput" onkeyup="Search()" placeholder="Zoeken..." class="form-control">
            <ul id="myUL">
                <% articles.forEach(article => { %>
                    <li class="li">
                        <div class="card mb-2 mt-4" id="wijn">
                            <a href="wijnen/<%= article.wijnen.slug %>" class="ml-2 mt-2">
                                <h4 class="card-title d-inline" id="title"><%= article.wijnen.title %> <%= article.wijnen.description %></h4>
                                <form action="/wijnen/<%= article.wijnen.id %>?_method=DELETE" method="POST" class="d-inline " id="delete">
                                    <button type="submit" class="btn btn-danger" id="delButton"><i class="fas fa-trash-alt"></i></button>
                                </form>
                                <h6 class="text-secondary">
                                <label class="color"><%= article.wijnen.color %>, </label>
                                <% if(article.wijnen.dateone != null && article.wijnen.datetwo != null){ %>
                                    <label id="dateOne"><%= article.wijnen.dateone %> </label> - <label id="dateTwo"><%= article.wijnen.datetwo %></label>, 
                                <% } %> 
                                <% if(article.wijnen.land != ""){ %>
                                    <label><%= article.wijnen.land %></label>,
                                <% } %> 
                                <% if(article.wijnen.streek != ""){ %>
                                    <label><%= article.wijnen.streek %></label>,
                                <% } %> 
                                <label class="amount"><%= article.wijnen.amount %></label>
                                </h6>
                            </a>
                        </div>
                        </li>
                <% }) %>
            </ul>
            <style>
                ul{
                    padding: 0;
                    margin: 0;
                    list-style: none;
                }
                a{
                    color: black;
                }
                a:hover{
                    color: black;
                    text-decoration: none;
                }
                select{
                    border: 0.5px solid grey;
                    border-radius: 10px;
                    font-size: 18px;
                    padding: 5px 5px 5px 5px;
                }
                label{
                    margin: 0;
                    padding: 0;
                }
                select:hover{
                    cursor: pointer;
                }
                #delete{
                    position: absolute;
                    right: 15px;
                    margin-top: 5px;
                }
            </style>
                <script>
                    function Search(dateOne, dateTwo) {
                        // Declare variables
                        var input, filter, ul, li, a, i, txtValue;
                        input = document.getElementById('myInput');
                        filter = input.value.toUpperCase();
                        ul = document.getElementById("myUL");
                        li = ul.getElementsByTagName('li');
                        // Loop through all list items, and hide those who don't match the search query
                        for (i = 0; i < li.length; i++) {
                            a = li[i].getElementsByTagName("a")[0];
                            txtValue = a.textContent || a.innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1 || txtValue > dateOne || txtValue < dateTwo){
                                li[i].style.display = "";
                            } 
                            else {
                                li[i].style.display = "none";
                            }
                        }
                    }
                    function filter(e){
                        const ul = document.getElementById("myUL");
                        const li = ul.querySelectorAll(".li")
                        const year = new Date().getFullYear();
                        var wijn = document.getElementById("wijn");
                        li.forEach(item => {
                            if(item.querySelector("#dateOne") != null){
                                var dateOne = item.querySelector("#dateOne").innerText;
                                var dateTwo = item.querySelector("#dateTwo").innerText;
                            }
                            switch(event.target.value){
                                case "all":
                                    item.style.display = "";
                                    break;
                                case "laat":
                                    if(dateTwo < year && dateOne < year && dateOne != null){
                                        item.style.display = ""
                                    }
                                    else{
                                        item.style.display = "none"
                                    }
                                    break;
                                case "drinken":
                                    if(dateOne <= year && dateTwo >= year){
                                        item.style.display = "";
                                    }
                                    else{
                                        item.style.display = "none";
                                    }
                                    break;
                                case "rijpen":
                                    if(dateOne > year && dateTwo > year && dateOne != null){
                                        item.style.display = "";
                                    }
                                    else{
                                        item.style.display = "none"
                                    }
                                    break;
                            }
                        })
                    }
                    function checkList(){
                        const ul = document.getElementById("myUL");
                        if(ul.childElementCount == 0){
                            var div = document.createElement("div");
                            div.classList.add("emptyDiv");
                            var h3 = document.createElement("h3");
                            h3.innerText = "Nog geen wijnen toegevoegd.";
                            h3.style.textAlign = "center"
                            h3.style.marginTop = "30px"
                            div.appendChild(h3);
                            ul.appendChild(div);
                        }
                    }
                    function errorHandling(){
                        if(e){
                            console.log("there was an error...")
                        }
                    }
                </script>
        </div>
    </body>
</html>